@model Lab_4_MVC_Razor.Models.Customer

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Customer</h4>
    <hr />
    <h3>Information</h3>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CustomerName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CustomerName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CustomerAddress)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CustomerAddress)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CustomerNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CustomerNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CustomerEmail)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CustomerEmail)
        </dd>
    </dl>
    <hr />
</div>
@foreach (var item in Model.Borrowings)
{
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(modelItem => item.BorrowDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(modelItem => item.BorrowDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(modelItem => item.ReturnDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(modelItem => item.ReturnDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(modelItem => item.Books.BookName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(modelItem => item.Books.BookName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(modelItem => item.IsReturned)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(modelItem => item.IsReturned)
        </dd>
    </dl>
    <hr />
}
<div>
    <a asp-action="Edit" asp-route-id="@Model.CustomerId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
